wb = xlsx_package.workbook
@parents = Micropost.where(user_id: current_user.id,parent_id: nil)
wb.add_worksheet(name: "Microposts") do |sheet|
  sheet.add_row %w(user content)
  @parents.each do |micropost|
    sheet.add_row [micropost.user_id, micropost.content]
  end
end
posts = Micropost.where("user_id = ? AND parent_id = ? AND CREATED_AT > ?", 1, nil, Date.today - 1.month)
