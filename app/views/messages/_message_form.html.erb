<%= form_with(model: Message.new, remote: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "send..." %>
  </div>
  <%= hidden_field_tag :sender_id, sender_id %>
    <%= hidden_field_tag :receiver_id, receiver_id %>

  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>

